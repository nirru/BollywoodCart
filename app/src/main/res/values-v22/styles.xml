<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:buttonStyle">@style/FacebookButtonStyle</item>-->
    </style>

    <style name="FacebookButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/facebook_color</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="GoogleButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/google_color</item>
        <item name="android:textColor">@color/White</item>
    </style>


    <style name="RedButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">@color/btn_red_color</item>
        <item name="android:textColor">@color/btn_red_color</item>
    </style>

    <style name="WhiteButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">@color/White</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CodeFont.White">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CodeFont.White.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CodeFont.Black">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CodeFont.Black.Medium">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CodeFont.Red">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="CodeFont.Red.Big">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
